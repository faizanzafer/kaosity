doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon' sizes='76x76' href='../assets/img/apple-icon.png')
    link(rel='icon' type='image/png' href='../assets/img/logo.png')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    title Kaosity
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport')
    // Fonts and icons
    link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css')
    // CSS Files
    link(href='../assets/css/material-dashboard.css?v=2.1.0' rel='stylesheet')
    // CSS Just for demo purpose, don't include it in your project
    link(href='../assets/demo/demo.css' rel='stylesheet')
  body.dark-edition
    .wrapper(style='height: auto')
      .main-panel(style='width: 100%; position: unset; float: unset')
        .content
          .container
            .row.justify-content-center.align-items-center
              .col-xl-6.col-lg-6.col-md-9
                .card
                  .card-header.card-header-primary(style='\
                  background: linear-gradient(60deg, #1f9ca2, #913f9e);\
                  text-align: center;\
                  ')
                    h2.card-title 
                      img(src="/assets/img/logo.png", alt="Logo" height="120")
                    // <p class="card-category">Login To DAshboard</p>
                  .card-body
                    form(method='post' action='/login')
                      .row
                        .col-md-12.px-5.py-3
                          .form-group
                            label.bmd-label-floating(for='email') Email address
                            input.form-control(type='email' name='email' value=data && data.email?data.email:'')
                      .row
                        .col-md-12.px-5.py-3
                          .form-group
                            label.bmd-label-floating(for='password') Password
                            input.form-control(type='password' name='password')
                      .row
                        .form-group.px-5
                          .custom-control.custom-checkbox.small
                            input#customCheck.custom-control-input(type='checkbox' name='rememberme')
                            label.custom-control-label(for='customCheck') Remember Me
                      button.btn.btn-primary.pull-right(type='submit')
                        | Log In
                      .clearfix
    // Core JS Files
    script(src='../assets/js/core/jquery.min.js')
    script(src='../assets/js/core/popper.min.js')
    script(src='../assets/js/core/bootstrap-material-design.min.js')
    // Notifications Plugin
    script(src='../assets/js/plugins/bootstrap-notify.js')
    // Control Center for Material Dashboard: parallax effects, scripts for the example pages etc
    script(src='../assets/js/material-dashboard.js?v=2.1.0')
    // Material Dashboard DEMO methods, don't include it in your project!
    script(src='../assets/demo/demo.js')
    if error
      script.
        const _err = "#{error}";
        console.log(_err)
        md.showNotification('top','right',_err,'danger')
    